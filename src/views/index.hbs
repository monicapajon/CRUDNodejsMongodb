<form action="/tasks/add" method="post">

  <div>
    <label for="title">Write a title:</label>
    <input type="text" name="title" placeholder="title" id="title" />
  </div>

  <div>
    <label for="description">Description:</label>
    <textarea
      name="description"
      placeholder="description"
      id="description"
    ></textarea>
  </div>

  <button>Add</button>

</form>

{{!-- <pre>
